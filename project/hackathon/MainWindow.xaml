<Window x:Class="hackathon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abstimmungs Analyse" Height="350" Width="600">
    <DockPanel>
        <Grid DockPanel.Dock="Top" Height="40" Margin="5,5,5,0">
            <Slider x:Name="TopSlider"  
                Minimum="1999" Maximum="2012" TickPlacement="Both" TickFrequency="1" Value="2005" IsSnapToTickEnabled="True"   
                VerticalContentAlignment="Center">
            </Slider>
        </Grid>
        <ListBox x:Name="KantonInfo"  DockPanel.Dock="Left" Width="200"></ListBox>
        <Grid x:Name="InfoPane" DockPanel.Dock="Right">

        </Grid>
    </DockPanel>
</Window>
